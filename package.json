{
  "name": "market-data-bridge",
  "version": "3.0.0",
  "description": "Market data bridge for ChatGPT and Claude — Yahoo Finance + Finviz + IBKR account — MCP server + REST API + 3-model eval engine",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "start": "node build/index.js",
    "start:mcp": "node build/index.js --mode mcp",
    "start:rest": "node build/index.js --mode rest",
    "dev": "concurrently -n api,ui -c blue,magenta \"node build/index.js\" \"cd frontend && npm run dev -- -p 3001\"",
    "dev:api": "node build/index.js",
    "dev:ui": "cd frontend && npm run dev -- -p 3001",
    "audit:api": "node scripts/api-audit.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "start:paper": "cross-env IBKR_PORT=7497 node build/index.js",
    "start:live": "cross-env IBKR_PORT=7496 node build/index.js",
    "dev:paper": "cross-env IBKR_PORT=7497 concurrently -n api,ui -c blue,magenta \"node build/index.js\" \"cd frontend && npm run dev -- -p 3001\"",
    "dev:live": "cross-env IBKR_PORT=7496 concurrently -n api,ui -c blue,magenta \"node build/index.js\" \"cd frontend && npm run dev -- -p 3001\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@google/genai": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@stoqey/ib": "^1.5.3",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "openai": "^6.21.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "yahoo-finance2": "~3.13.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.12.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
